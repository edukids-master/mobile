<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activitiesModel"
            type="itu.m1.edukids.controller.ActiviteController" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.home.HomeFragment"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_activite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            app:listData="@{activitiesModel.activities}"
            tools:listitem="@layout/card_activite"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
