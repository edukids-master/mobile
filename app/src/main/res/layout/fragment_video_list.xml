<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="itu.m1.edukids.controller.VideoViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="itu.m1.edukids.view.ui.video.VideoFragmentList">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/video_list"
            android:name="itu.m1.edukids.VideoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="educational videos"
            app:layoutManager="LinearLayoutManager"
            app:videoList="@{viewModel.videos}"
            tools:context=".view.ui.video.VideoFragmentList"
            tools:itemCount="5"
            tools:listitem="@layout/fragment_video_card">

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progressBarVideo"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" ></ProgressBar>

    </RelativeLayout>
</layout>